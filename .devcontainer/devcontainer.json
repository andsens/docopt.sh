{
  "name": "Python 3",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.8",
  "settings": {
    "python.testing.pytestEnabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/py-utils/bin/flake8",
    "python.linting.flake8Args": [
      "--config=.flake8"
    ],
    "python.analysis.extraPaths": [
      "/workspace/docopt-parser"
    ],
    "files.exclude": {
      ".pytest_cache": true
    }
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "ms-python.vscode-pylance",
    "timonwong.shellcheck",
    "bungcip.better-toml",
    "asciidoctor.asciidoctor-vscode",
    "me-dutour-mathieu.vscode-github-actions"
  ],
  "postCreateCommand": ".devcontainer/post.sh",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "mounts": [
    "source=${localWorkspaceFolder}/../docopt-parser,target=/workspaces/docopt-parser,type=bind"
  ]
}
